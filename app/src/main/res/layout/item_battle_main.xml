<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="15dp"
    android:padding="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"> <!-- 왼쪽 정렬 -->

        <!-- 왼쪽 정렬된 텍스트뷰 추가 -->
        <TextView
            android:id="@+id/my_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배틀게시판"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="8dp"/>

        <!-- 좋아요 버튼 -->
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_like_off"
            android:layout_marginEnd="8dp"/>

        <!-- 댓글 버튼 -->
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_comment" />

    </LinearLayout>

    <!-- 포함된 레이아웃을 감싸는 새로운 LinearLayout 추가 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- 왼쪽 네모 -->
        <include
            android:id="@+id/left_item"
            layout="@layout/item_card"/>

        <!-- 오른쪽 네모 -->
        <include
            android:id="@+id/right_item"
            layout="@layout/item_card"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 좌측 투표 (battleId) -->
        <TextView
            android:id="@+id/tv_left_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:padding="3dp"
            android:background="@drawable/bg_left_vote"
            android:gravity="center"
            android:text="유저ID" />

        <!-- 우측 투표 (battleId) -->
        <TextView
            android:id="@+id/tv_right_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:padding="3dp"
            android:background="@drawable/bg_right_vote"
            android:gravity="center"
            android:text="유저ID" />

        <!-- 투표 비율 ProgressBar (양쪽 투표 TextView에 맞춤) -->
        <ProgressBar
            android:id="@+id/vote_progress_bar"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_left_vote"
            android:layout_toStartOf="@id/tv_right_vote"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="50"/>

        <!-- vs 표시 (ProgressBar 위에) -->
        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/vote_progress_bar"
            android:layout_centerHorizontal="true"
            android:text="vs"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>