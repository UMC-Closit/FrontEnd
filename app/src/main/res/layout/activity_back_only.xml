<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="12dp">

    <!-- 툴바 (고정된 영역) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/marginLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.03"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            app:layout_constraintLeft_toRightOf="@+id/marginLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/marginLeft2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintLeft_toRightOf="@+id/iv_back"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Mission"
            android:textColor="@color/black"
            android:font="@font/ibm_extralight"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/marginLeft2"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 중앙 메인 이미지 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageAndTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/imageViewBackOnly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/margin8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageAndTag"
        app:layout_constraintHeight_percent="0.015"
        />

    <View
        android:id="@+id/margin9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/margin8"
        app:layout_constraintHeight_percent="0.015"
        app:layout_constraintWidth_percent="0.12"
        />

    <ImageView
        android:id="@+id/addItem"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/btn_add_item"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toBottomOf="@id/margin8"
        app:layout_constraintStart_toEndOf="@id/margin9"
        />


    <!-- 문구 + 색상 아이콘 + 개인정보 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPointColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@id/addItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageAndTag">

        <!-- 왼쪽 여백 -->
        <View
            android:id="@+id/marginLeft3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.12" />

        <!-- 오늘의 포인트 색상 텍스트 -->
        <TextView
            android:id="@+id/textTodayColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 포인트 색상"
            android:paddingEnd="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/ibm_extralight"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/marginLeft3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 색상 아이콘 -->
        <View
            android:id="@+id/viewColorIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_detail_color_round"
            app:layout_constraintStart_toEndOf="@id/textTodayColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintDimensionRatio="1:1" />


        <!-- 공개범위 버튼 -->
        <ImageButton
            android:id="@+id/btnPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_privacy"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@+id/marginRight3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 오른쪽 여백 -->
        <View
            android:id="@+id/marginRight3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.1" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/margin4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintHeight_percent="0.01"
        app:layout_constraintTop_toBottomOf="@+id/layoutPointColor"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPointColor">

        <ImageButton
            android:id="@+id/btnHashtag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_hashtag"
            android:background="@android:color/transparent"/>

        <!-- 해시태그 영역과 + 버튼 -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_hashtag_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            app:flow_horizontalGap="6dp"
            app:flow_verticalGap="5dp"
            app:flow_wrapMode="aligned"
            app:flow_horizontalAlign="start"
            app:layout_constraintStart_toEndOf="@id/btnHashtag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 업로드 버튼 -->
    <ImageButton
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.065"
        android:src="@drawable/btn_upload"
        android:background="@android:color/transparent"
        tools:ignore="SpeakableTextPresentCheck"
        app:layout_constraintBottom_toTopOf="@+id/margin5"
        app:layout_constraintEnd_toEndOf="@+id/margin5"/>

    <View
        android:id="@+id/margin5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.015" />

</androidx.constraintlayout.widget.ConstraintLayout>