<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 툴바 (고정된 영역) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/marginLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.03"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            app:layout_constraintLeft_toRightOf="@+id/marginLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/marginLeft2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintLeft_toRightOf="@+id/iv_back"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Mission"
            android:textColor="@color/black"
            android:font="@font/ibm_extralight"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/marginLeft2"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 중앙 메인 이미지 -->
    <ImageView
        android:id="@+id/imageViewBackOnly"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/image_background"
        android:clipToOutline="true"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 문구 + 색상 아이콘 + 개인정보 버튼 -->
    <LinearLayout
        android:id="@+id/layoutPointColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        android:layout_marginTop="16dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackOnly"
        app:layout_constraintTop_toBottomOf="@id/imageViewBackOnly"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/marginLeft3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/transparent"/>

        <!-- 왼쪽 텍스트 (오늘의 포인트 색상) -->
        <TextView
            android:id="@+id/textTodayColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 포인트 색상"
            android:textColor="@android:color/black"
            android:font="@font/ibm_extralight"
            android:textSize="16sp"
            android:layout_marginEnd="10sp"/>

        <!-- 색상 아이콘 -->
        <View
            android:id="@+id/viewColorIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/round_shape"
            android:layout_weight="1.75"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="3"/>

        <!-- 공개범위 버튼 -->
        <ImageButton
            android:id="@+id/btnPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_privacy"
            android:background="@android:color/transparent"
            tools:ignore="SpeakableTextPresentCheck"/>
    </LinearLayout>

    <View
        android:id="@+id/margin4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintHeight_percent="0.01"
        app:layout_constraintTop_toBottomOf="@+id/layoutPointColor"/>

    <!-- 해시태그 버튼 및 컨테이너 -->
    <LinearLayout
        android:id="@+id/layoutHashtags"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@id/margin4"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/margin6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="0.4" />

        <ImageButton
            android:id="@+id/btnHashtag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/btn_hashtag"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/hashtagContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- 업로드 버튼 -->
    <ImageButton
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.065"
        android:src="@drawable/btn_upload"
        android:background="@android:color/transparent"
        tools:ignore="SpeakableTextPresentCheck"
        app:layout_constraintBottom_toTopOf="@+id/margin5"
        app:layout_constraintEnd_toEndOf="@+id/margin5"/>

    <View
        android:id="@+id/margin5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.015" />

</androidx.constraintlayout.widget.ConstraintLayout>