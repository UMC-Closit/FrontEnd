<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Search Bar Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="9:1"
        android:layout_margin="10dp"
        android:background="@drawable/lookup_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/img_Search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="10dp"
            android:src="@drawable/search"
            android:contentDescription="Search Icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Search Input -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="search"
            android:background="@null"
            android:fontFamily="@font/ibm_regular"
            android:textColor="@color/gray_dark"
            android:paddingStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/img_Search"
            app:layout_constraintTop_toTopOf="@id/search_container"
            app:layout_constraintBottom_toBottomOf="@id/search_container"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_today_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/search_container">

        <TextView
            android:id="@+id/btn_todaycloset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:includeFontPadding="false"
            android:text="오늘의 옷장"
            android:fontFamily="@font/noto_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btn_upload"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_default="spread"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_community_upload"
            android:background="@null"
            android:contentDescription="Upload Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_todaycloset"
            app:layout_constraintBottom_toBottomOf="@id/btn_todaycloset" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Scrollable Section -->
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_today_title"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <!-- Detail Image 1 -->
            <ImageButton
                android:id="@+id/img_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insta"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:contentDescription="Detail Image 1" />

            <!-- Detail Image 2 -->
            <ImageButton
                android:id="@+id/img_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insta"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:contentDescription="Detail Image 2" />

            <!-- Detail Image 3 -->
            <ImageButton
                android:id="@+id/img_detail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insta"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:contentDescription="Detail Image 3" />

        </LinearLayout>
    </HorizontalScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_batttle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal_scroll_view">

        <TextView
            android:id="@+id/btn_battle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="배틀 게시판"
            android:layout_marginTop="30dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl_batttle_title" />

        <ImageButton
            android:id="@+id/btn_upload2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_default="spread"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:contentDescription="Battle Upload Button"
            android:src="@drawable/ic_community_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_battle"
            app:layout_constraintBottom_toBottomOf="@id/btn_battle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Section -->
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_batttle_title"
        >

        <LinearLayout
            android:id="@+id/gotochallenge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <!-- Detail Image 1 -->
            <ImageButton
                android:id="@+id/img_battle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insta"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:contentDescription="Detail Image 1" />

            <!-- Detail Image 2 -->
            <ImageButton
                android:id="@+id/img_battle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insta"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:contentDescription="Detail Image 2" />

            <!-- Detail Image 3 -->
            <ImageButton
                android:id="@+id/img_battle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insta"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:contentDescription="Detail Image 3" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>