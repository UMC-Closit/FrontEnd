<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_calendar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_profile_add_highlight"
        android:clipToOutline="true"
        android:background="@drawable/bg_rounded_calendar"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="3:5"
        app:layout_constraintWidth_percent="1" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/iv_calendar"
        app:layout_constraintBottom_toBottomOf="@id/iv_calendar"
        app:layout_constraintStart_toStartOf="@id/iv_calendar"
        app:layout_constraintEnd_toEndOf="@id/iv_calendar"/>
</androidx.constraintlayout.widget.ConstraintLayout>