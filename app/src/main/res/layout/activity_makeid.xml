<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 상단 검은색 배경 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.24"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.12"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@null"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/header_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp">

            <View
                android:id="@+id/indicator_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/indicator_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_active"
                app:layout_constraintStart_toEndOf="@id/indicator_1"
                android:layout_marginStart="6dp"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/indicator_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                app:layout_constraintStart_toEndOf="@id/indicator_2"
                android:layout_marginStart="6dp"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/noto_regular"
            app:layout_constraintBottom_toBottomOf="@id/header_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 회원가입 폼 -->
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/noto_regular"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_bright"
                app:layout_constraintTop_toTopOf="@id/cl_info"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/edittext_rounded"
                android:hint="이름 입력"
                style="@style/EditTextDefaultStyle"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="8:1"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_dark"
                app:layout_constraintTop_toBottomOf="@id/tv_name_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_id_label"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/noto_regular"
                android:text="ID"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_bright"
                app:layout_constraintTop_toBottomOf="@id/et_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_check_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="8:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_id_label"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintDimensionRatio="3.8:1"
                    android:background="@drawable/edittext_rounded"
                    android:hint="ID 입력"
                    style="@style/EditTextDefaultStyle"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/auth_gray_dark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/btn_check_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintDimensionRatio="3.8:1"
                    android:gravity="center"
                    android:text="중복 확인"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_signup_check"
                    app:layout_constraintStart_toEndOf="@id/et_id"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/et_id"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Email 입력 -->
            <TextView
                android:id="@+id/tv_email_label"
                android:text="email"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_bright"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/noto_regular"
                app:layout_constraintTop_toBottomOf="@id/cl_check_id"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="8:1"
                android:background="@drawable/edittext_rounded"
                android:hint="email 입력"
                android:padding="12dp"
                android:textSize="14sp"
                style="@style/EditTextDefaultStyle"
                android:textColor="@color/auth_gray_dark"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_email_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_error_email"
                android:text="올바른 이메일 형식을 입력해주세요"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:textColor="@color/error_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"/>

            <!-- 생년월일 입력 -->
            <TextView
                android:id="@+id/tv_birthdate_label"
                android:text="생년월일"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_bright"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/noto_regular"
                android:layout_marginBottom="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv_error_email"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>


            <EditText
                android:id="@+id/et_birthdate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="8:1"
                android:background="@drawable/edittext_rounded"
                android:hint="생년월일 입력"
                style="@style/EditTextDefaultStyle"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_dark"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_birthdate_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_error_birthdate"
                android:text="생년월일을 YYYY-MM-DD 형식으로 입력해주세요"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:textColor="@color/error_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_birthdate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 설정완료 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Continue"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:backgroundTint="@color/black_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
