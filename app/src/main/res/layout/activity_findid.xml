<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 검은색 배경 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 뒤로 가기 버튼 -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_backward_button"
            android:contentDescription="뒤로 가기"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"/>

        <!-- 페이지 Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_margin="2dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_active"
                android:layout_margin="2dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_margin="2dp"/>
        </LinearLayout>

        <!-- 회원가입 제목 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Find ID"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Find Password"
            android:textColor="#A9A9A9"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/title"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 회원가입 폼 -->
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Email 입력 -->
            <TextView
                android:text="email"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_rounded"
                android:hint="email 입력"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- 인증번호 입력 -->
            <TextView
                android:text="인증번호 입력"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <EditText
                android:id="@+id/et_birthdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_rounded"
                android:hint="인증번호 입력"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- 아이디 찾기 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Find ID"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:backgroundTint="@color/black_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
