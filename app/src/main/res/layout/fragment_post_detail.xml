<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 큰 프레임 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <!-- 사진 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_image_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_image_big"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_detail_big_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTagContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/iv_image_big"
                app:layout_constraintBottom_toBottomOf="@id/iv_image_big"
                app:layout_constraintStart_toStartOf="@id/iv_image_big"
                app:layout_constraintEnd_toEndOf="@id/iv_image_big" />

            <ImageView
                android:id="@+id/iv_image_small"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_detail_small_default"
                app:layout_constraintDimensionRatio="W,16:9"
                app:layout_constraintStart_toStartOf="@id/iv_image_big"
                app:layout_constraintTop_toTopOf="@id/iv_image_big"
                app:layout_constraintWidth_percent="0.4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 포인트 색상 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_point_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.92">

        <TextView
            android:id="@+id/tv_point_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 포인트 색상"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/view_color_circle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_detail_color_round"
            app:layout_constraintStart_toEndOf="@id/tv_point_color"
            app:layout_constraintTop_toTopOf="@id/tv_point_color"
            app:layout_constraintBottom_toBottomOf="@id/tv_point_color"
            app:layout_constraintDimensionRatio="1:1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/exposed_dropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_add_highlight_dropdown"
                android:drawableEnd="@drawable/ic_drop_down"
                android:drawablePadding="4dp"
                android:inputType="none"
                android:padding="8dp"
                android:text="공개범위"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 해시태그 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_point_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_hashtag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_horizontalGap="16dp"
            app:flow_verticalGap="16dp"
            app:flow_wrapMode="aligned"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하이라이트 추가 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_with_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="12dp"
        app:icon="@drawable/ic_highlight_add"
        app:iconGravity="textStart"
        app:iconPadding="5dp"
        app:iconSize="24dp"
        app:iconTint="@color/white"
        android:text="하이라이트에 추가"
        android:textSize="14dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/ibm_medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
