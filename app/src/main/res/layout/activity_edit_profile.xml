<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="12dp">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintHeight_percent="0.085"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보 수정"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_update"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintDimensionRatio="10:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="이름"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:textColor="@color/auth_gray_bright"
                android:textSize="14sp"
                app:layout_constraintDimensionRatio="5.1:1"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="생년월일"
                android:textColor="@color/auth_gray_bright"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                app:layout_constraintDimensionRatio="3.8:1"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_label"
            app:layout_constraintWidth_percent="1">

            <EditText
                android:id="@+id/et_name"
                style="@style/EditTextDefaultStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/edittext_rounded"
                android:hint="이름 입력"
                android:padding="12dp"
                android:textColor="@color/auth_gray_dark"
                android:textSize="14sp"
                app:layout_constraintDimensionRatio="3.9:1"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cl_edit" />

            <EditText
                android:id="@+id/et_birth"
                style="@style/EditTextDefaultStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/edittext_rounded"
                android:hint="YYYY-MM-DD"
                android:padding="12dp"
                android:textColor="@color/auth_gray_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/et_name"
                app:layout_constraintDimensionRatio="3.9:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/idText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_regular"
            android:text="ID"
            android:textColor="@color/auth_gray_bright"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_edit" />

        <EditText
            android:id="@+id/idEditText"
            style="@style/EditTextDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext_rounded_checked"
            android:hint="ID"
            android:enabled="false"
            android:padding="12dp"
            android:textColor="@color/auth_gray_dark"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idText"
            app:layout_constraintWidth_percent="1" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_regular"
            android:text="email"
            android:textColor="@color/auth_gray_bright"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idEditText" />

        <EditText
            android:id="@+id/emailEditText"
            style="@style/EditTextDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext_rounded_checked"
            android:enabled="false"
            android:hint="closit@email.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/auth_gray_dark"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintTop_toBottomOf="@id/emailText"
            app:layout_constraintWidth_percent="1" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/noto_regular"
            android:text="현재 비밀번호"
            android:textColor="@color/auth_gray_bright"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailEditText" />

        <EditText
            android:id="@+id/passwordEditText"
            style="@style/EditTextDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext_rounded"
            android:hint="현재 비밀번호 입력"
            android:padding="12dp"
            android:textColor="@color/auth_gray_dark"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordText"
            app:layout_constraintWidth_percent="1" />

        <TextView
            android:id="@+id/newPasswordText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/noto_regular"
            android:text="새 비밀번호"
            android:textColor="@color/auth_gray_bright"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

        <EditText
            android:id="@+id/newPasswordEditText"
            style="@style/EditTextDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext_rounded"
            android:hint="새 비밀번호 입력"
            android:padding="12dp"
            android:textColor="@color/auth_gray_dark"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPasswordText"
            app:layout_constraintWidth_percent="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="변경하기"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_regular"
        android:backgroundTint="@color/black_button"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
