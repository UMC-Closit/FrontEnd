<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/marginLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            app:layout_constraintLeft_toRightOf="@+id/marginLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/marginLeft2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintLeft_toRightOf="@+id/btnBack"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보 수정"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintStart_toEndOf="@+id/marginLeft2"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/margin1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.02"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/margin3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=" 이름"
        android:textColor="@android:color/darker_gray"
        android:font="@font/ibm_extralight"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        app:layout_constraintTop_toBottomOf="@+id/margin3" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="이름 입력"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.06" />

    <View
        android:id="@+id/margin2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.0005"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toEndOf="@+id/nameEditText"
        app:layout_constraintLeft_toRightOf="@+id/nameEditText"
        />

    <TextView
        android:id="@+id/birthText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=" 생년월일"
        android:textColor="@android:color/darker_gray"
        android:font="@font/ibm_extralight"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/margin3" />

    <EditText
        android:id="@+id/birthEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="생년월일 입력"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/birthText"
        app:layout_constraintStart_toEndOf="@id/nameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.06" />

    <TextView
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=" ID"
        android:textColor="@android:color/darker_gray"
        android:font="@font/ibm_extralight"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintTop_toBottomOf="@id/nameEditText"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        />

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="ID 입력"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/idText"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.06"/>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=" email"
        android:textColor="@android:color/darker_gray"
        android:font="@font/ibm_extralight"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintTop_toBottomOf="@id/idEditText"
        app:layout_constraintLeft_toRightOf="@id/margin1"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="email 입력"
        android:background="@drawable/edittext_background"
        android:inputType="textEmailAddress"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        app:layout_constraintHeight_percent="0.06"/>

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=" 비밀번호"
        android:textColor="@android:color/darker_gray"
        android:font="@font/ibm_extralight"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        app:layout_constraintTop_toBottomOf="@id/emailEditText" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="비밀번호 입력"
        android:background="@drawable/edittext_background"
        android:inputType="textPassword"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintTop_toBottomOf="@id/passwordText"
        app:layout_constraintLeft_toRightOf="@id/margin1"
        app:layout_constraintHeight_percent="0.06"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.92"
        app:layout_constraintHeight_percent="0.065"
        android:text="변경하기"
        android:font="@font/ibm_extralight"
        android:backgroundTint="@color/black"
        android:src="@drawable/btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/marginBottom"  />

    <View
        android:id="@+id/marginBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03" />
</androidx.constraintlayout.widget.ConstraintLayout>
