<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <!-- 상단 검은색 배경 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.24"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.12"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@null"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/header_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp">

            <View
                android:id="@+id/indicator_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/indicator_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                app:layout_constraintStart_toEndOf="@id/indicator_1"
                android:layout_marginStart="6dp"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/indicator_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_active"
                app:layout_constraintStart_toEndOf="@id/indicator_2"
                android:layout_marginStart="6dp"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/noto_regular"
            app:layout_constraintBottom_toBottomOf="@id/header_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 회원가입 폼 -->
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintBottom_toTopOf="@id/btn_set_credentials"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 이름 입력 -->
            <TextView
                android:id="@+id/tv_new_password_label"
                android:text="비밀번호"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/noto_regular"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_bright"
                app:layout_constraintTop_toTopOf="@id/cl_info"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/edittext_rounded"
                android:hint="비밀번호 입력"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="8:1"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_dark"
                app:layout_constraintTop_toBottomOf="@id/tv_new_password_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_error_pw"
                android:text="비밀번호를 입력해주세요"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:textColor="@color/error_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_new_password"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"/>

            <!-- ID 입력 -->
            <TextView
                android:id="@+id/tv_confirm_password_label"
                android:text="비밀번호 확인"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_bright"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/noto_regular"
                android:layout_marginBottom="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv_error_pw"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="8:1"
                android:background="@drawable/edittext_rounded"
                android:hint="비밀번호 다시입력"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="@color/auth_gray_dark"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_password_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_error_cfpw"
                android:text="비밀번호가 일치하지 않습니다"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:textColor="@color/error_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Continue 버튼 -->
    <Button
        android:id="@+id/btn_set_credentials"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="설정완료"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:backgroundTint="@color/black_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
