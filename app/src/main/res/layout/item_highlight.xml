<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <ImageView
        android:id="@+id/highlightImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_profile_highlight"
        android:background="@drawable/rounded_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="1" />

    <TextView
        android:id="@+id/highlightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.12.07"
        android:fontFamily="@font/ibm_regular"
        android:textSize="10sp"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/highlightImage"
        app:layout_constraintStart_toStartOf="@id/highlightImage"
        app:layout_constraintEnd_toEndOf="@+id/highlightImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
