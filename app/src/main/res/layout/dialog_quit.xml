<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_add_highlight_dropdown"
    android:paddingVertical="20dp"
    android:paddingHorizontal="50dp">

    <TextView
        android:id="@+id/tv_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말로 탈퇴하시겠습니까?\n본인의 Closit ID를 입력해주세요."
        android:fontFamily="@font/noto_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_id"
        />

    <!-- 해시태그 입력창 -->
    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.6"
        android:hint="ID 입력"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/gray_normal"
        android:padding="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_quit"
        app:layout_constraintBottom_toTopOf="@+id/tv_quit_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_quit_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closit ID가 일치하지 않습니다.\n다시 입력해주세요."
        android:fontFamily="@font/noto_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:visibility="gone"
        android:textColor="@color/error_red"
        android:textSize="14dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        app:layout_constraintBottom_toTopOf="@+id/ll_btn"/>

    <!-- 버튼 컨테이너 -->
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toBottomOf="@id/tv_quit_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 취소 버튼 -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="취소"
            android:backgroundTint="@color/transparent"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="탈퇴"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>