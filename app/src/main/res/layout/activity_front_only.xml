<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topNavigationBar"
        layout="@layout/toolbar_top" />

    <ImageView
        android:id="@+id/imageViewFrontOnly"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/image_background"
        android:clipToOutline="true" />

    <!-- 문구 + 색상 아이콘 LinearLayout -->
    <LinearLayout
        android:id="@+id/layoutPointColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFrontOnly"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textTodayColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 포인트 색상"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginRight="8dp" />

        <View
            android:id="@+id/viewColorIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_shape" />
    </LinearLayout>

    <!-- 해시태그 버튼 및 해시태그 Container -->
    <LinearLayout
        android:id="@+id/layoutHashtags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutPointColor"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_hashtag"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/hashtagContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_continue"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>
