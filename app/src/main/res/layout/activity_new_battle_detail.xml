<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="12dp">

    <!-- 툴바 (고정된 영역) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintHeight_percent="0.085"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 배틀 생성"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 스크롤 가능한 콘텐츠 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 큰 프레임 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <!-- 사진 영역 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="W,566:336"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_image_big"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_detail_big_default"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clipToOutline="true"
                        android:background="@drawable/rounded_image"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <ImageView
                        android:id="@+id/iv_image_small"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:background="@drawable/rounded_image"
                        android:src="@drawable/img_detail_small_default"
                        app:layout_constraintDimensionRatio="W,201:157"
                        app:layout_constraintStart_toStartOf="@id/iv_image_big"
                        app:layout_constraintTop_toTopOf="@id/iv_image_big"
                        app:layout_constraintWidth_percent="0.33" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 배틀 제목 -->
                <EditText
                    android:id="@+id/et_battle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="배틀 제목을 입력하세요"
                    android:textSize="16sp"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_image_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <!-- 배틀 기간 -->
                <TextView
                    android:id="@+id/tv_battle_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="25.01.31~25.02.02"
                    android:textSize="14dp"
                    android:layout_marginTop="-16dp"
                    android:fontFamily="@font/noto_regular"
                    app:layout_constraintStart_toStartOf="@id/cl_frame"
                    app:layout_constraintTop_toBottomOf="@id/et_battle_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Upload"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:backgroundTint="@color/black_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>